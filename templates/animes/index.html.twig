{% extends 'base.html.twig' %}

{% block title %}Animes index{% endblock %}

{% block body %}
    <h1>Animes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Synopsis</th>
                <th>Duration</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for anime in animes %}
            <tr>
                <td>{{ anime.id }}</td>
                <td>{{ anime.name }}</td>
                <td>{{ anime.synopsis }}</td>
                <td>{{ anime.duration }}</td>
                <td>
                    <a href="{{ path('animes_show', {'id': anime.id}) }}">show</a>
                    <a href="{{ path('animes_edit', {'id': anime.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('animes_new') }}">Create new</a>
{% endblock %}
